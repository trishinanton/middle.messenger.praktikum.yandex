{
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "moduleTypes": {
      "src/**/*.ts": "cjs"
    }
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
